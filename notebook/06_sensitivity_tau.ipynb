for tau in tau_values:
    phi, dphi, chi, dchi = simulate_tau(tau, params_base)
    freqs, spec = power_spectrum(phi, dt=0.01)
    Q = compute_Q(freqs, spec)
    Q_values.append(Q)

    VÏ• = -0.5*params_base['m_phi']**2*np.array(phi)**2 + (params_base['lambda_phi']/4)*np.array(phi)**4
    VÏ‡ = 0.5*params_base['m_chi']**2*np.array(chi)**2 + (params_base['lambda_chi']/4)*np.array(chi)**4
    p_total = 0.5*(np.array(dphi)**2 + np.array(dchi)**2) - (VÏ• + VÏ‡)
    rho_total = 0.5*(np.array(dphi)**2 + np.array(dchi)**2) + VÏ• + VÏ‡ + 0.5*params_base['g']**2*np.array(phi)**2*np.array(chi)**2
    w_total = p_total / rho_total
    mean_w_values.append(np.mean(w_total[-1000:]))

