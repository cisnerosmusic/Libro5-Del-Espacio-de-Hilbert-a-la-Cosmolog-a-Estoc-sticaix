    p['tau_chi'] = tau_value
    N = int(T / dt)
    phi, dphi = np.zeros(N), np.zeros(N)
    chi, dchi = np.zeros(N), np.zeros(N)
    zeta_phi, zeta_chi = np.zeros(N), np.zeros(N)

    phi[0], chi[0] = 0.1, 0.1
    dphi[0], dchi[0] = 0.0, 0.0

